# Local development environment variables
# Copy this file to .env.local and update with your values

# SSL Configuration (for HTTPS testing)
USE_SSL=false
SSL_CERT=deployment/ssl-certs/localhost.pem
SSL_KEY=deployment/ssl-certs/localhost-key.pem

# Backend Configuration
FLASK_ENV=development
FLASK_DEBUG=1
BACKEND_PORT=5000
BACKEND_HOST=0.0.0.0

# Frontend Configuration
VUE_APP_API_URL=http://localhost:5000
VUE_DEV_SERVER_PORT=8081
VUE_DEV_SERVER_HOST=localhost

# Security (generate with generate_secrets.py)
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-here

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:8081,http://localhost:8080

# Model Configuration
MODEL_CACHE_DIR=backend/models
BASE_MODEL_CACHE_DIR=backend/base_models
MAX_MODEL_CACHE_SIZE_GB=10

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
